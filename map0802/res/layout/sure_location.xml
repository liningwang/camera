<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:paddingLeft="5dip" 
		android:paddingRight="5dip" android:focusable="false"
		android:background="@drawable/custom_info_bubble">
		<TextView android:id="@+id/tpl_list_blog_text_content"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="top" android:paddingBottom="5dip"
			android:paddingLeft="12dip" android:paddingRight="10dip"
			android:focusable="false" android:text="确认标记位置正确？"
			android:textSize="20dip"/>
		<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:focusable="false">
			<Button android:id="@+id/cancel"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"
			    android:layout_marginRight="5dip"
				android:background="@drawable/button_background"
				android:focusable="false" android:text="取消"/>

			<Button android:id="@+id/ok"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="1" android:gravity="center"
				android:layout_marginLeft="5dip"
				android:background="@drawable/button_background"
				android:focusable="false" 
				android:text="确认并提交"/>
		</LinearLayout>

	</LinearLayout>

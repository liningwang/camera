<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <LinearLayout android:orientation="horizontal" 
                          android:layout_width="fill_parent" 
                          android:layout_height="44dip"
                          android:background="@color/red">

         <TextView
             android:id="@+id/tv_return"
             android:layout_width="36dp"
             android:layout_height="fill_parent"
	     android:layout_marginTop="9dip"
             android:layout_marginBottom="9dip"
             android:background="@drawable/icon_return"
             android:clickable="true" />
         <TextView
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:paddingRight="57dip"
             android:text="注册用户"
             android:textColor="@color/white"
             android:gravity="center"
             android:textSize="20dip"
             />

     </LinearLayout>
     <LinearLayout android:orientation="vertical" 
                          android:layout_width="fill_parent" 
                          android:layout_height="wrap_content"
                          android:layout_marginTop="20dip"
                          android:layout_marginBottom="20dip"
                          android:background="@drawable/camera_info_layout_background">
     <LinearLayout android:orientation="horizontal" 
                          android:layout_width="fill_parent" 
                          android:layout_height="40dip">
                          <TextView 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:text="帐号"
                              android:gravity="center|left"
                              android:paddingLeft="20dip"
                              android:layout_weight="1"/>
                          <EditText 
                              android:id="@+id/et_account" 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:layout_weight="3"
                              android:background="@null"
                              android:hint="注册帐号"
                              android:gravity="center|right"
                              android:paddingRight="15dip"
                              android:textSize="12dip"/>
                          <TextView 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:text="*"
                              android:gravity="center"
			      android:textColor="@color/red"
                              android:paddingRight="10dip"
                              />

    </LinearLayout>
          <ImageView   
            android:layout_width="fill_parent"  
            android:layout_height="0.2dp"  
            android:background="@color/gray"
        />

    <LinearLayout android:orientation="horizontal" 
                          android:layout_width="fill_parent" 
                          android:layout_height="40dip"
                          >
                          <TextView 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:text="密码"
                              android:gravity="center|left"
                              android:paddingLeft="20dip"
                              android:layout_weight="1"/>
                          <EditText 
                              android:id="@+id/account_code" 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:layout_weight="3"
                              android:background="@null"
                              android:hint="帐号密码"
                              android:gravity="center|right"
                              android:paddingRight="15dip"
                              android:textSize="12dip"/>
                          <TextView 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:text="*"
                              android:paddingRight="10dip"
                              android:gravity="center"
			      android:textColor="@color/red"
                              
			      />

    </LinearLayout>
      <ImageView   
            android:layout_width="fill_parent"  
            android:layout_height="0.2dp"  
            android:background="@color/gray"
        />

<LinearLayout android:orientation="horizontal" 
                          android:layout_width="fill_parent" 
                          android:layout_height="40dip"
                          >
                          <TextView 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:text="确认密码"
                              android:gravity="center|left"
                              android:paddingLeft="20dip"
                              android:layout_weight="1"/>
                          <EditText 
                              android:id="@+id/sure_code" 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:layout_weight="3"
                              android:background="@null"
                              android:hint="确认帐号密码"
                              android:gravity="center|right"
                              android:paddingRight="15dip"
                              android:textSize="12dip"/>
                          <TextView 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:text="*"
                              android:gravity="center"
			      android:textColor="@color/red"
                              android:paddingRight="10dip"
			      />

 </LinearLayout>
      <ImageView   
            android:layout_width="fill_parent"  
            android:layout_height="0.2dp"  
            android:background="@color/gray"
        />

<LinearLayout android:orientation="horizontal" 
                          android:layout_width="fill_parent" 
                          android:layout_height="40dip"
                          >
                          <TextView 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:text="昵称"
                              android:gravity="center|left"
                              android:paddingLeft="20dip"
                              android:layout_weight="1"/>
                          <EditText 
                              android:id="@+id/sign" 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:layout_weight="3"
                              android:background="@null"
                              android:hint="添写你的昵称"
                              android:gravity="center|right"
                              android:paddingRight="15dip"
                              android:textSize="12dip"/>
                          <TextView 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:text=" "
                              android:gravity="center"
                              android:paddingRight="10dip"
                              />

 </LinearLayout>
      <ImageView   
            android:layout_width="fill_parent"  
            android:layout_height="0.2dp"  
            android:background="@color/gray"
        />
<LinearLayout android:orientation="horizontal" 
                          android:layout_width="fill_parent" 
                          android:layout_height="40dip"
                          >
                          <TextView 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:text="qq号码"
                              android:gravity="center|left"
                              android:paddingLeft="20dip"
                              android:layout_weight="1"/>
                          <EditText 
                              android:id="@+id/qq" 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:layout_weight="3"
                              android:background="@null"
                              android:hint="建议写上，方便网友沟通"
                              android:gravity="center|right"
                              android:paddingRight="15dip"
                              android:textSize="12dip"/>
                          <TextView 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:text=" "
                              android:gravity="center"
                              android:paddingRight="10dip"
                              />

 </LinearLayout>
     <ImageView   
            android:layout_width="fill_parent"  
            android:layout_height="0.2dp"  
            android:background="@color/gray"
        />
<LinearLayout android:orientation="horizontal" 
                          android:layout_width="fill_parent" 
                          android:layout_height="40dip"
                          >
                          <TextView 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:text="email地址"
                              android:gravity="center|left"
                              android:paddingLeft="20dip"
                              android:layout_weight="1"/>
                          <EditText 
                              android:id="@+id/email" 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:layout_weight="3"
                              android:background="@null"
                              android:hint="建议写上，方便网友沟通"
                              android:gravity="center|right"
                              android:paddingRight="15dip"
                              android:textSize="12dip"/>
                          <TextView 
                              android:layout_height="fill_parent"
                              android:layout_width="wrap_content"
                              android:text=" "
                              android:gravity="center"
                              android:paddingRight="10dip"
                              />

 </LinearLayout>

 </LinearLayout>

 <Button 
         android:id="@+id/register"
         android:layout_width="140dip"
        android:layout_height="wrap_content" 
        android:layout_marginTop="30dip"
        android:layout_gravity="center_horizontal"
        android:text="注册"
        android:textColor="@color/white"
        android:background="@drawable/button_background"/>

</LinearLayout>

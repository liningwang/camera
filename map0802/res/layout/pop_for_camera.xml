<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:paddingLeft="5dip" 
		android:paddingRight="5dip" android:focusable="false"
		android:background="@drawable/custom_info_bubble">
		<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:focusable="false">
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:focusable="false"
			android:layout_weight="1">
			<TextView android:id="@+id/zan_count"
			    	   android:layout_width="fill_parent" 
			          android:layout_height="wrap_content" 
			          android:text="0"
			          android:gravity="center"
			          android:textColor="@color/red"/>
			<Button android:id="@+id/zan"
				android:layout_width="40dip" 
				android:layout_height="40dip"
				android:layout_gravity="center_horizontal"
				android:background="@drawable/zan"
				android:focusable="false"/>
			<TextView android:layout_width="wrap_content" 
			          android:layout_height="wrap_content" 
			            android:layout_marginTop="5dip"
			          android:text="拍外地车"
			          android:layout_marginLeft="3dip"
			          android:gravity="center"
			          android:textColor="@color/black"
			          />
		</LinearLayout>
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:focusable="false"
			android:layout_weight="1">

		 <TextView android:id="@+id/buzan_count"
		     			android:layout_width="fill_parent" 
			          android:layout_height="wrap_content" 
			          android:text="0"
			          android:gravity="center"
			          android:textColor="@color/red"/>
			<Button
			    android:id="@+id/buzan"
			    android:layout_width="40dip"
			    android:layout_height="40dip"
			    android:layout_gravity="center_horizontal"
			    android:background="@drawable/buzan"
			    android:focusable="false"
			     />
			<TextView android:layout_width="wrap_content" 
			          android:layout_height="wrap_content" 
			            android:layout_marginTop="5dip"
			          android:text="不拍外地车"
			          android:gravity="center"
			          android:textColor="@color/black"/>

		</LinearLayout>
</LinearLayout>
              <ImageView   
            		android:layout_width="fill_parent"  
           		android:layout_height="0.2dip"  
           		android:background="@color/red"  
                        android:layout_marginTop="4dp"
                        />
<TextView android:id="@+id/comment_camera"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center" android:paddingTop="5dip"
			android:paddingLeft="12dip" android:paddingRight="10dip"
			android:clickable="true" android:text="摄像头评论"
			android:textColor="#003399"
			android:textSize="14dip"
		    />
	</LinearLayout>

<merge xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
   
    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />
     <LinearLayout
           	android:id="@+id/global"
                android:layout_width="34dip"
                android:orientation="vertical" 
                android:layout_height="180dip"
           	android:layout_alignRight="@id/bmapView"
           	android:layout_marginRight="20dip"
           	android:layout_marginTop="50dip"
           	android:clickable="true"
                android:background="@android:color/transparent">
     <LinearLayout
           	android:id="@+id/add_location"
                android:layout_width="fill_parent"
                android:layout_height="34dip" 
                android:orientation="vertical" 
		android:padding = "2dip"
		android:background="#88323232"
           	android:layout_marginTop="10dip"
                android:clickable="true"
           	android:gravity="center" 
		> 
                <ImageView   
			android:id="@+id/tianjia"
            		android:layout_width="15dip"  
           		android:layout_height="15dip"  
		   	android:background="@drawable/notianjia"
                        android:layout_marginBottom="1dp"
           		/>
     <TextView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center" 
           android:text="添加标记"
           android:textColor="@color/white"
	   android:textSize="6dip"
         />
     </LinearLayout>
     <LinearLayout
           	android:id="@+id/remove_location"
                android:layout_width="fill_parent"
                android:layout_height="34dip" 
                android:orientation="vertical" 
		android:padding = "2dip"
		android:background="#88323232"
           	android:layout_marginTop="10dip"
                android:clickable="true"
           	android:gravity="center" 
		> 
                <ImageView   
            		android:layout_width="11dip"  
           		android:layout_height="11dip"  
		   	android:background="@drawable/yichu"
                        android:layout_marginBottom="6dp"
           		/>
       <TextView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center" 
           android:text="移除标记"
           android:textColor="@color/white"
	   android:textSize="6dip"
         />
     </LinearLayout>
     <LinearLayout
                android:id="@+id/panorama_location"
                android:layout_width="fill_parent"
                android:layout_height="34dip" 
                android:orientation="vertical" 
		android:padding = "2dip"
		android:background="#88323232"
           	android:layout_marginTop="10dip"
                android:clickable="true"
           	android:gravity="center" 
		> 
                <ImageView   
                	android:id="@+id/panorama_image"
            		android:layout_width="15dip"  
           		android:layout_height="15dip"  
		   	android:background="@drawable/quanjing"
                        android:layout_marginBottom="1dp"
           		/>
       <TextView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center" 
           android:text="全景"
           android:textColor="@color/white"
		   android:textSize="7dip"
         />
     </LinearLayout>
          <LinearLayout
                android:id="@+id/add_camera"
                android:layout_width="fill_parent"
                android:layout_height="34dip" 
                android:orientation="vertical" 
                android:padding = "2dip"
                android:background="#88323232"
                android:layout_marginTop="10dip"
                android:clickable="true"
                android:gravity="center" 
                >
                <ImageView   
                        android:id="@+id/weizhang_image"
                        android:layout_width="15dip"  
                        android:layout_height="15dip"  
                        android:background="@drawable/weizhangdi1"
                        android:layout_marginBottom="1dp"
                        />
       <TextView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center" 
           android:text="违章地"
           android:textColor="@color/white"
                   android:textSize="7dip"
         />
     </LinearLayout>
     </LinearLayout>
     <LinearLayout
		android:id="@+id/nave"
                android:layout_width="fill_parent"
                android:orientation="horizontal" 
                android:layout_height="wrap_content"
		android:padding="3dip"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dip"
                android:layout_marginLeft="28dip"
                android:layout_marginRight="48dip"
                android:background="@android:color/transparent"
	>
     <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal" 
                android:layout_height="30dp"
                android:background="@drawable/navegation_menu1">
		<TextView
                    android:id="@+id/camera_topic"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center" 
                    android:text="路线讨论"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:clickable="true"
		   android:textSize="12dip"
		    />
                <ImageView   
            		android:layout_width="0.2dp"  
           		android:layout_height="fill_parent"  
           		android:background="@color/gray"  
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
           		/>
                <TextView
                    android:id="@+id/about"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center" 
                    android:text="关于"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:clickable="true"
                   android:textSize="12dip"
                    />
		<ImageView   
                        android:layout_width="0.2dp"  
                        android:layout_height="fill_parent"  
                        android:background="@color/gray"  
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        />
		<LinearLayout
                    	android:id="@+id/profile"
                	android:layout_width="fill_parent"
                	android:orientation="horizontal" 
                    	android:layout_height="fill_parent"
                    	android:layout_weight="1"
                    	android:gravity="center"
                    	android:clickable="true"
			>
		<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                     
                    android:text="个人信息"
           			android:gravity="center"
                    android:textColor="@color/black"
		   android:textSize="12dip"
		    />
     		</LinearLayout>
     </LinearLayout>
     </LinearLayout>
   <RelativeLayout
        android:id="@+id/id_marker_info"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:background="#b0000000"
        android:clickable="true" >

        <ImageView
            android:id="@+id/info_img"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/map_image_border_white"
            android:clickable="true"
	         android:alpha="1"
            android:scaleType="fitXY"
            android:src="@drawable/a04" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal" 
                 android:layout_height="50dp"
                  android:layout_alignParentBottom="true"
                android:background="@drawable/bg_map_bottom">

                <TextView
                    android:id="@+id/info_name"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                      android:gravity="center"
                  
                       android:layout_weight="1"
                    android:text="老米家泡馍小炒"
                    android:clickable="true"
                    android:textColor="#FFF5EB" />
                <ImageView   
            			android:layout_width="0.2dp"  
           			 android:layout_height="40dp"  
           			 android:background="#ffffff"  
                      android:layout_marginTop="4dp"
           				 />

                <TextView
                    android:id="@+id/info_distance"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                       android:gravity="center"
        
                       android:layout_weight="1"
                    android:text="距离200米"
                    android:textColor="#FFF5EB" />
                <ImageView   
            			android:layout_width="0.2dp"  
           			 android:layout_height="40dp"  
           			 android:background="#ffffff"  
            			  android:layout_marginTop="4dp"
              
          			  />
                <TextView
                    android:id="@+id/upload"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                       android:gravity="center"
                    
                    android:layout_weight="1"
                    android:text="上传图片"
                    android:textColor="#FFF5EB" />
            </LinearLayout>
</RelativeLayout>
</RelativeLayout>
</merge>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
     >
  <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/welcom_background"
    android:orientation="vertical"
    android:padding="8dip" 
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:layout_marginBottom="5dip"
    android:layout_marginTop="40dip"
    >
    <TextView 
     android:id="@+id/title"
      android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="公告"
    android:gravity="center"
     android:textColor="@color/green"
    android:textStyle="bold"
     android:textSize="23dip"
    />
  <TextView 
     android:id="@+id/content"
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:text="内容马上呈现...."
     android:gravity="center|left"
     android:padding="5dip"
     android:textColor="@color/white"
     android:textSize="20dip"
      />
       <LinearLayout
                android:id="@+id/panorama_location"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal" 
                android:layout_marginBottom="3dip"
                android:layout_marginTop="13dip"
                android:gravity="center_horizontal" 
                >
  <TextView 
    android:id="@+id/entry_map"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:text="进入地图"
    android:gravity="center"
    android:background="@drawable/reply_button_background"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:paddingTop="3dip"
    android:paddingBottom="3dip"
    android:clickable="true"/>

</LinearLayout>
  </LinearLayout>
     <LinearLayout
                android:id="@+id/panorama_location"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="vertical" 
                android:layout_marginTop="15dip"
     		android:paddingLeft="15dip"
     		android:paddingRight="15dip"
                android:gravity="left|top" > 

  <TextView 
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:text="软件功能"
     android:layout_gravity="center"
    android:textStyle="bold"
     android:textSize="20dip"
      />
     <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal" 
                android:layout_marginTop="15dip"
                android:gravity="left|top" >
  <TextView 
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:text="1."
     android:gravity="center"
    android:textStyle="bold"
     android:textSize="15dip"
      />
  <TextView 
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:text="外地车违章地点分布,也可以上传自己的违章地"
     android:gravity="center|left"
     android:padding="5dip"
    android:textStyle="bold"
     android:textSize="15dip"
      />
  </LinearLayout>
     <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal" 
                android:gravity="left|top" >
  <TextView 
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:text="2."
     android:gravity="center"
    android:textStyle="bold"
     android:textSize="15dip"
      />
  <TextView 
     android:textSize="15dip"
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:text="查看全景地图"
     android:gravity="center|left"
     android:padding="5dip"
    android:textStyle="bold"
      />
  </LinearLayout>
     <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal" 
                android:gravity="left|top" >
  <TextView 
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:text="3."
     android:gravity="center"
    android:textStyle="bold"
     android:textSize="15dip"
      />
  <TextView 
     android:textSize="15dip"
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:text="在地图上添加标记，待行驶到距离标记地点2km内，就会开始每5s一次的语音播报您距离标记地点的位置"
     android:gravity="center|left"
     android:padding="5dip"
    android:textStyle="bold"
      />
  </LinearLayout>
     <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal" 
                android:gravity="left|top" >
  <TextView 
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:text="4."
     android:gravity="center"
    android:textStyle="bold"
     android:textSize="15dip"
      />
  <TextView 
     android:textSize="15dip"
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:text="安全路线讨论，外地车友上传的他们确定的不会违章的路线"
     android:gravity="center|left"
     android:padding="5dip"
    android:textStyle="bold"
      />
	
  </LinearLayout>
  </LinearLayout>
</LinearLayout>
